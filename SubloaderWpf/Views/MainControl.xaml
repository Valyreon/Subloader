<UserControl
    x:Class="SubloaderWpf.Views.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SubloaderWpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="502"
    Background="#e8e8e8"
    FontFamily="Segoe UI Semibold"
    RenderOptions.BitmapScalingMode="HighQuality"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <StackPanel Margin="0">
        <DataGrid
            Height="400"
            AlternatingRowBackground="#f9f9f9"
            AutoGenerateColumns="False"
            Background="#f5f5f5"
            BorderBrush="#bbbbbb"
            BorderThickness="0,0,0,1"
            CanUserResizeRows="False"
            CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
            FontFamily="Segoe UI"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            HorizontalGridLinesBrush="#EDEDED"
            IsReadOnly="True"
            ItemsSource="{Binding SubtitleList}"
            RowHeight="22"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedItem}"
            Style="{StaticResource DatagridStyle}"
            VerticalGridLinesBrush="#EDEDED">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="15*"
                    Binding="{Binding Name}"
                    ElementStyle="{StaticResource ColumnElementStyle}"
                    Header="Name">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="#e8e8e8" />
                            <Setter Property="BorderBrush" Value="#bbb" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="5*"
                    Binding="{Binding Language}"
                    ElementStyle="{StaticResource ColumnElementStyle}"
                    Header="Language"
                    SortDirection="Ascending">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="#e8e8e8" />
                            <Setter Property="BorderBrush" Value="#bbb" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Height" Value="25" />
                            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#6bb9f0" />
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#6bb9f0" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
            </DataGrid.Resources>
        </DataGrid>
        <StatusBar
            Height="23"
            Background="#e8e8e8"
            BorderBrush="#bbbbbb"
            BorderThickness="0,0,0,1"
            FontFamily="Segoe UI Semibold">
            <StatusBarItem>
                <TextBlock
                    Width="500"
                    Height="25"
                    MinHeight="25"
                    HorizontalAlignment="Center"
                    FontStyle="Italic"
                    Text="{Binding StatusText, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
            </StatusBarItem>
        </StatusBar>
        <StackPanel
            Height="27"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <CheckBox
                Margin="5,6"
                Content="Search by name"
                IsChecked="{Binding SearchByName, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox
                Margin="5,6"
                Content="Search by hash"
                IsChecked="{Binding SearchByHash, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel
            Height="48"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="112"
                Height="30"
                Margin="0,0,10,10"
                Background="#ffffff"
                Command="{Binding ChooseFileCommand}"
                Content="Open" />
            <Button
                Width="112"
                Height="30"
                Margin="0,0,10,10"
                Background="#ffffff"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                Width="112"
                Height="30"
                Margin="0,0,10,10"
                Background="#ffffff"
                Command="{Binding DownloadCommand}"
                Content="Download"
                IsDefault="true" />
            <Button
                Width="112"
                Height="30"
                Margin="0,0,0,10"
                Background="#ffffff"
                Command="{Binding SettingsCommand}"
                Content="Settings" />
        </StackPanel>

    </StackPanel>
</UserControl>
