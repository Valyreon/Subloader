<UserControl
    x:Class="SubloaderWpf.Views.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:SubloaderWpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SubloaderWpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="TheControl"
    AllowDrop="True"
    Background="#e8e8e8"
    DragDrop.DragOver="OnDragOverFile"
    DragDrop.Drop="OnDropFile"
    FontFamily="Segoe UI Semibold"
    RenderOptions.BitmapScalingMode="HighQuality"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
    </UserControl.InputBindings>
    <UserControl.Resources>
        <ResourceDictionary>
            <Converters:ColorBrightnessConverter x:Key="ColorConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="23" />
            <RowDefinition Height="27" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>
        <DataGrid
            AutoGenerateColumns="False"
            Background="#f5f5f5"
            BorderBrush="#bbbbbb"
            BorderThickness="0,0,0,1"
            CanUserResizeRows="False"
            CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
            FontFamily="Segoe UI"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            HorizontalGridLinesBrush="#EDEDED"
            IsReadOnly="True"
            ItemsSource="{Binding SubtitleList}"
            RowHeight="22"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedItem}"
            SelectionMode="Single"
            Style="{StaticResource DatagridStyle}"
            VerticalGridLinesBrush="#EDEDED">
            <DataGrid.InputBindings>
                <MouseBinding Command="{Binding DownloadCommand}" MouseAction="LeftDoubleClick" />
                <KeyBinding Key="Return" Command="{Binding DownloadCommand}" />
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="15*"
                    Binding="{Binding Name}"
                    ElementStyle="{StaticResource ColumnElementStyle}"
                    Header="Name">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="#e8e8e8" />
                            <Setter Property="BorderBrush" Value="#bbb" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="5*"
                    Binding="{Binding Language}"
                    ElementStyle="{StaticResource ColumnElementStyle}"
                    Header="Language"
                    SortDirection="Ascending">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="#e8e8e8" />
                            <Setter Property="BorderBrush" Value="#bbb" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Height" Value="25" />
                            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StatusBar
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Background="#e8e8e8"
            BorderBrush="#bbbbbb"
            BorderThickness="0,0,0,1"
            FontFamily="Segoe UI Semibold">
            <StatusBarItem HorizontalAlignment="Center">
                <TextBlock
                    Height="25"
                    MinHeight="25"
                    HorizontalAlignment="Center"
                    FontStyle="Italic"
                    Text="{Binding StatusText, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
            </StatusBarItem>
        </StatusBar>
        <Grid
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <CheckBox
                Grid.Column="1"
                Content="Search by name"
                IsChecked="{Binding SearchByName, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox
                Grid.Column="3"
                Content="Search by hash"
                IsChecked="{Binding SearchByHash, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Background="#ffffff"
                Command="{Binding ChooseFileCommand}"
                Content="Open" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Background="#ffffff"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                Grid.Row="1"
                Grid.Column="5"
                Background="#ffffff"
                Command="{Binding DownloadCommand}"
                Content="Download"
                IsDefault="true" />
            <Button
                Grid.Row="1"
                Grid.Column="7"
                Background="#ffffff"
                Command="{Binding SettingsCommand}"
                Content="Settings" />
        </Grid>
    </Grid>
</UserControl>
